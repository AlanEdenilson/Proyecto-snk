<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CarpiShop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/stylesheet/gestionDpedido/menu.css">
    <link rel="stylesheet" href="/stylesheet/gestionDpedido/menutablas.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <link rel="stylesheet" href="./css/main.css">
</head>
<body>

    <div class="wrapper">
        <header class="header-mobile">
            <h1 class="logo">CarpiShop</h1>
            <button class="open-menu" id="open-menu">
                <i class="bi bi-list"></i>
            </button>
        </header>
        <aside>
            <button class="close-menu" id="close-menu">
                <i class="bi bi-x"></i>
            </button>
            <header>
                <h1 class="logo">CarpiShop</h1>
            </header>
            <nav>
                <ul class="menu">
                    <li>
                        <button id="todos" value="1" class="boton-menu boton-categoria active"><i class="bi bi-hand-index-thumb-fill"></i> Pedidos Exitosos</button>
                    </li>
                    <li>
                        <button id="abrigos" value="2" class="boton-menu boton-categoria"><i class="bi bi-hand-index-thumb"></i> Pedidos en Procesos</button>
                    </li>
                    <li>
                        <button id="camisetas" value="3" class="boton-menu boton-categoria"><i class="bi bi-hand-index-thumb"></i> Pedidos pendientes</button>
                    </li>
                    <li>
                        <button id="pantalones" value="4" class="boton-menu boton-categoria"><i class="bi bi-hand-index-thumb"></i> Pedidos cancelados</button>
                    </li>
                    <li>
                        <a class="boton-menu boton-carrito" href="./carrito.html">
                            <i class="bi bi-cart-fill"></i> Carrito <span id="numerito" class="numerito">0</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <footer>
                <p class="texto-footer">© 2022 Carpi Coder</p>
            </footer>
        </aside>
        <main>
            <h2 class="titulo-principal" id="titulo-principal">Administrador de pedidos</h2>
            <div class="boton-editar">
                <button class="btn-editar">
                    <i class="bi bi-pencil"></i> 
                    <span class="tooltip">Editar</span>
                </button>
            </div>
            <div class="boton-salir-editar">
                <button class="btn-salir-editar">
                    <i class="bi bi-x-circle"></i> 
                    <span class="tooltip">Salir de edición</span>
                </button>
            </div>
            <style>
                .boton-salir-editar {
                    position: absolute;
                    top: 50px;
                    right: 120px;
                }
                .btn-salir-editar {
                    background-color: #e6ebf0;
                    color: rgb(224, 65, 65);
                    border: none;
                    padding: 2px 16px;
                    border-radius: 4px;
                    cursor: pointer;
                    display: flex;
                    align-items: center;
                    gap: 5px;
                }
                .btn-salir-editar:hover {
                    background-color: #f0e6e6;
                }
                .btn-salir-editar .tooltip {
                    width: 120px;
                    background-color: #dc3545;
                    margin-left: -60px;
                }
                .btn-salir-editar:hover .tooltip {
                    visibility: visible;
                    opacity: 1;
                }
            </style>
            <style>
                .boton-editar {
                    position: relative;
                }
                .btn-editar {
                    background-color: transparent;
                    color: rgb(65, 81, 224);
                    border: none;
                    padding: 2px 16px;
                    border-radius: 4px;
                    cursor: pointer;
                    display: flex;
                    align-items: center;
                    gap: 5px;
                }
                .btn-editar:hover {
                    background-color: #e6ebf0;
                }
                .tooltip {
                    visibility: hidden;
                    width: 60px;
                    background-color: #007bff;
                    color: #fff;
                    text-align: center;
                    border-radius: 6px;
                    padding: 5px 0;
                    position: absolute;
                    z-index: 1;
                    bottom: 125%;
                    left: 50%;
                    margin-left: -30px;
                    opacity: 0;
                    transition: opacity 0.3s;
                }
                .btn-editar:hover .tooltip {
                    visibility: visible;
                    opacity: 1;
                }
            </style>
            <style>
                .boton-editar {
                    position: absolute;
                    top: 50px;
                    right: 60px;
                }
                .btn-editar {
                    background-color: #e6ebf0;
                    color: rgb(65, 81, 224);
                    border: none;
                    padding: 2px 16px;
                    border-radius: 4px;
                    cursor: pointer;
                    display: flex;
                    align-items: center;
                    gap: 5px;
                }
                .btn-editar:hover {
                   
                    color: black;
                }
            </style>
            <div id="contenedor-productos" class="contenedor-productos">
               
            </div>
        </main>
    </div>
    
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    <script>
       
$(document).ready(function() {
    $(".boton-categoria").on("click", function(e) {
        $(".boton-categoria").removeClass("active");
        $(this).addClass("active");
        var valor = $(this).val();
        console.log("Valor del botón clickeado:", valor);

    // Cargar la página correspondiente en el div
    $("#contenedor-productos").load("/gestion/menus?n=" + valor, function(response, status, xhr) {
        if (status == "error") {
            console.log("Error al cargar la página: " + xhr.status + " " + xhr.statusText);
            $("#contenedor-productos").html("<p>Error al cargar el contenido. Por favor, intente de nuevo.</p>");
        }
    });
    });
});


    </script>
</body>
</html>
