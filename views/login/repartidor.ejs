<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/54b3975121.js" crossorigin="anonymous"></script>
    <title>Registro</title>
    <link rel="stylesheet" href="stylesheet/Gerardo_estilos/repar.css">
</head>
<body>
    <img class="mm" src="/stylesheet/Gerardo_estilos/grrr.png" alt="">
    <div class="register-container">
        <h2>REGISTRO REPARTIDOR</h2>
        <form method="post" action="/repartidor">
            <div class="input-group">
                <input type="hidden" id="fullname" name="rol" value="2">
            </div>
            <div class="input-group">
                <label for="fullname"><i class="fas fa-user"></i> Nombre </label>
                <input type="text" id="fullname" name="username" placeholder="User" value="<% if(typeof valores != 'undefined') { %><%= valores.username %><% }%>">
                <% if (typeof errors !== 'undefined') { %>
                <% if ( errors.username ) { %>
                        <div>
                            <h2 class="error1" 
                                
                                style="font-family: 'Times New Roman', Times, serif;
                                font: small-caps 200% serif;
                                font-size: 18px;
                                color: #ff0000;
                            
                                "><i class="fa-solid fa-circle-exclamation" style="color: #ff0000;"></i> <%= errors.username %></h2>
                            </div>
                        
                  
                  <% } %>
                  <% } %>
            </div>
            <div class="input-group">
                <label for="email"><i class="fas fa-envelope"></i> Correo Electrónico</label>
                <input type="email" id="email" name="email" placeholder="example@gmail.com"value="<% if(typeof valores != 'undefined') { %><%= valores.email %><% }%>" >
                <% if (typeof errors !== 'undefined') { %>
                 <% if ( errors.email ) { %>
                        <div>
                            <h2 class="error2" 
                                
                                style="font-family: 'Times New Roman', Times, serif;
                                font: small-caps 200% serif;
                                font-size: 18px;
                                color: #ff0000;
                                position: relative;
                                top: -15x;

                                "><i class="fa-solid fa-circle-exclamation" style="color: #ff0000;"></i> <%= errors.email %></h2>
                            </div>
                      <% } %>
                      <% } %>
            </div>
            <div class="input-group">
                <label for="id"><i class="fa-solid fa-hashtag"></i>Id Marca</label>
                <input type="Id" id="Id" name="Id" placeholder="ID"value="<% if(typeof valores != 'undefined') { %><%= valores.Id %><% }%>" >
                <% if (typeof errors !== 'undefined') { %>
                 <% if ( errors.Id ) { %>
                        <div>
                            <h2 class="error3" 
                                
                                style="font-family: 'Times New Roman', Times, serif;
                                font: small-caps 200% serif;
                                font-size: 18px;
                                color: #ff0000;
                                position: relative;
                                top: -15x;

                                "><i class="fa-solid fa-circle-exclamation" style="color: #ff0000;"></i> <%= errors.Id  %></h2>
                            </div>
                        
                      <% } %> 
                      <% } %>
            </div>
            <div class="input-group">
                <label for="password"><i class="fas fa-lock"></i> Contraseña</label>
                <input type="password" id="password" name="password" placeholder="Contraseña" value="<% if(typeof valores != 'undefined') { %><%= valores.password %><% }%>" >
                <i class="fa-solid fa-eye-slash" style="color: #919191;" id="n0"></i>
                <% if (typeof errors !== 'undefined') { %>
                 <% if ( errors.password ) { %>
                        <div>
                            <h2 class="error4" 
                                
                                style="font-family: 'Times New Roman', Times, serif;
                                font: small-caps 200% serif;
                                font-size: 18px;
                                color: #ff0000;

                                "><i class="fa-solid fa-circle-exclamation" style="color: #ff0000;"></i> <%= errors.password  %></h2>
                            </div>
                        
                      <% } %>
                      <% } %>
                    
            </div>
            <div class="input-group">
                <p id="message"></p>
                <label class="repetirr" for="confirmpassword"><i class="fas fa-lock"></i> Repetir Contraseña</label>
                <input type="password" id="confirm-password" name="confirm_password" placeholder="Repetir Contraseña" >
                <i class="fa-solid fa-eye-slash" style="color: #919191;" id="n11"></i>
                <% if (typeof errors !== 'undefined') { %>
                 <% if ( errors.confirm_password ) { %>
                        <div>
                            <h2 class="error5" 
                                
                                style="font-family: 'Times New Roman', Times, serif;
                                font: small-caps 200% serif;
                                font-size: 18px;
                                color: #ff0000;

                                "><i class="fa-solid fa-circle-exclamation" style="color: #db0cc0;"></i> <%= errors.confirm_password %></h2>
                            </div>
                        
                      <% } %>
                      <% } %>
                   
            </div>
            <a href="/" class="login-link">Ya tienes cuenta?</a>
            <button type="submit" class="register-button">Registrarse</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script>
        $(document).ready(function() {
            $('.fa-solid').click(function() {
                var input = $(this).siblings('input');
                var icon = $(this);
                
                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                }
            });
        });
    </script>

    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>